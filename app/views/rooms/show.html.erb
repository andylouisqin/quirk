<div class="container">
    <a href="/rooms">Back to all rooms</a>
    
    
    <%= form_for @question do |q| %>
    	<div><%= q.text_field :body %></div>
    	<%= q.hidden_field :room_id %>
    	<%= q.submit %>
    <% end %>

	<!-- <div>
    <%= button_to "Ask a question", 
    	:controller => "questions", :action => "new", 
    	:room_id => @room.id %>
    </div> -->

    <h1><%=  @room.name %></h1>
    <h3><%=  @room.description %></h3>
    <br>
    <span id="room-description"><%=  @room.description %></span>
    <br>
    <div id="room-button"><%= button_to("Ask a question", :controller => "questions", :action => "new", :id => @room.id) %></div>

    <div class="list-container">
        <% @room.questions.each do |q| %>
            <div class="room row">
                <p><%= q.body %></p>
            </div>
            <hr>
        <% end %>
    </div>
    <%=  link_to "Delete", room_path(@room), method: :delete %>

</div>